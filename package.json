{
    "name": "klasa-vscode",
    "displayName": "klasa-vscode",
    "description": "Klasa extension for VS Code",
    "version": "0.0.1",
    "publisher": "glaucus-pocus",
    "engines": {
        "vscode": "^1.15.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
		"workspaceContains:komada.js",
		"onCommand:klasa.init"
    ],
    "contributes": {
		"commands": [
			{
				"command": "klasa.init",
				"title": "Klasa: Initialize new bot"
			}
		]
	},
    "main": "./extension",
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.5.2",
        "vscode": "^1.1.5",
        "mocha": "^3.5.0",
        "eslint": "^4.6.1",
        "@types/node": "^8.0.26",
        "@types/mocha": "^2.2.42"
    }
}
