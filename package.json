{
    "name": "klasa-vscode",
    "displayName": "klasa-vscode",
    "description": "Klasa extension for VS Code",
    "version": "0.3.1",
    "publisher": "bdistin",
    "license": "MIT",
    "homepage": "https://github.com/dirigeants/klasa-vscode.git#readme",
    "repository": {
        "type": "git",
        "url": "https://github.com/dirigeants/klasa-vscode.git"
    },
    "bugs": {
        "url": "https://github.com/dirigeants/klasa-vscode/issues"
    },
    "engines": {
        "node": ">=10.1.0",
        "vscode": "^1.31.0"
    },
    "keywords": [
        "klasa"
    ],
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:klasa.js",
        "onCommand:klasa.newPiece",
        "onCommand:klasa.init",
        "onCommand:klasa.transfer",
        "onCommand:klasa.download",
        "onCommand:klasa.setPreferences"
    ],
    "contributes": {
        "snippets": [
            {
                "language": "javascript",
                "path": "./build/snippets.json"
            },
            {
                "language": "typescript",
                "path": "./build/snippets-ts.json"
            }
        ],
        "commands": [
            {
                "command": "klasa.newPiece",
                "title": "Klasa: Create new piece"
            },
            {
                "command": "klasa.init",
                "title": "Klasa: Initialize new bot"
            },
            {
                "command": "klasa.transfer",
                "title": "Klasa: Transfer a core piece"
            },
            {
                "command": "klasa.download",
                "title": "Klasa: Download a pre-built Provider"
            },
            {
                "command": "klasa.setPreferences",
                "title": "Klasa: Set language & package manager preferences"
            }
        ],
        "configuration": {
            "title": "Klasa configuration",
            "properties": {
                "klasa.language": {
                    "type": "string",
                    "default": "js",
                    "description": "Which language to use for Klasa ('js' or 'ts')"
                },
                "klasa.packageManager": {
                    "type": "string",
                    "default": "npm",
                    "description": "Which package manager to use for Klasa ('npm' or 'yarn')"
                }
            }
        }
    },
    "main": "./src/extension",
    "icon": "assets/klasa.gif",
    "scripts": {
        "test:lint": "npx eslint src",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "build": "node ./scripts/build"
    },
    "devDependencies": {
        "eslint": "^5.16.0",
        "eslint-config-klasa": "github:dirigeants/klasa-lint",
        "vsce": "^1.61.0",
        "vscode": "^1.1.34"
    },
    "dependencies": {
        "fs-nextra": "^0.4.5",
        "node-fetch": "^2.6.0"
    }
}
