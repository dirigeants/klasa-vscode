{
    "name": "klasa-vscode",
    "displayName": "klasa-vscode",
    "description": "Klasa extension for VS Code",
    "version": "0.0.2",
    "publisher": "glaucus-pocus",
    "homepage": "https://github.com/glaucus-pocus/klasa-vscode.git#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/glaucus-pocus/klasa-vscode.git"
    },
    "bugs": {
        "url": "https://github.com/glaucus-pocus/klasa-vscode/issues"
    },
    "engines": {
        "vscode": "^1.15.0"
    },
    "keywords": [
        "klasa"
    ],
    "categories": [
        "Other"
    ],
    "activationEvents": [
		"workspaceContains:komada.js",
		"onCommand:klasa.init"
    ],
    "contributes": {
		"snippets": [
			{
				"language": "javascript",
				"path": "./snippets/klasa.json"
			}
		],
		"commands": [
			{
				"command": "klasa.init",
				"title": "Klasa: Initialize new bot"
			}
		]
	},
    "main": "./extension",
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.5.2",
        "vscode": "^1.1.5",
        "mocha": "^3.5.0",
        "eslint": "^4.6.1",
        "@types/node": "^8.0.26",
        "@types/mocha": "^2.2.42"
    }
}
